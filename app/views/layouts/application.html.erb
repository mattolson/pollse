<!DOCTYPE html>
<html>

  <%= render :partial => '/shared/head' %>

  <body>
    <nav class="navbar navbar-inverse" role="navigation">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="navbar-header">
            	<%= link_to(image_tag("pollse_logo2.png", :alt => "Pollse"), root_url, :class => "navbar-brand") %>
          </div>

          <div class="collapse navbar-collapse navbar-ex8-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if current_or_guest_user.guest? %>
                <li>
                <%= link_to 'Sign Up', new_user_registration_path %>
                </li>
                <li>
                <%= link_to 'Sign In', new_user_session_path %>
                </li>
              <% else %>
                <li class="dropdown">
                  <a id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#">
                    <%= current_or_guest_user.email %>
                    <span class="caret"></span>
                  </a>

                  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                    <li class="presentation">
                      <%= link_to "Public Profile", user_path(current_user), :class => "menuitem" %>
                    </li>
                    <li class="presentation">
                      <%= link_to "My Questions", questions_path, :class => "menuitem" %>
                    </li>
                    <li class="presentation">
                      <%= link_to "New Question", new_question_path, :class => "menuitem" %>
                    </li>
                    <li class="presentation">
                      <%= link_to "Offers", offers_path, :class => "menuitem" %>
                    </li>                    
                    <li class="presentation">
                      <%= link_to "Account Setting", edit_user_registration_path, :class => "menuitem" %>
                    </li>
                    <li role="presentation" class="divider"></li>
                    <li class="presentation">
                      <%= link_to "Sign Out", destroy_user_session_path, :class => "menuitem", :method => :delete %>
                    </li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    </nav>

    <%= yield :before_page %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>
    
          <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
          
          <%= yield %>
        </div>
      </div>
    </div>

    <%= yield :after_page %>

    <%= render :partial => '/shared/javascript' %>

  </body>
</html>
