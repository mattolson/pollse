<div class="row">
  <div class="col-md-3">
    <p> <%= gravatar_for(@user, 125) %> </p>
    <h3><%= @user.username %></h3>
    <p>
    <% if @user == current_user %>
      <%= link_to "<i class='glyphicon glyphicon-cog'></i> Edit Account".html_safe, edit_user_registration_path(current_user), :class => "btn btn-default" %>
    <% end %>
    </p>
  </div>
  <div class="col-md-9">
    <div class="big-list">
      <ul>
        <% @polls.each do |p| %>
          <li class="poll-<%= p.active? ? "active" : "inactive" %>">
          <span class="meta"><%= p.responses.size %> Responses</span>
          <%= link_to p, p %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
